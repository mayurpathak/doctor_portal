<div class="container-fluid h-custom">
  <br />
  <center><h3><%= !current_user.is_doctor ? "Receptionist" : "Doctor" %> Dashboard</h3></center>

  <p style="color: green;"><%= notice %></p>

  <div>
    <h3 style="float: left;">Patients List</h3>

    <%= link_to "Create New patient", new_patient_path, style:"float:right" , class: "btn btn-xs btn-success"%>
    <div>
      <div id="patients">
        <%= render "patient", patients: @patients %> <% if current_user.is_doctor %> <%= bar_chart Patient.group("DATE(appointment_date)").count %> <% end %>
      </div>
    </div>
  </div>
</div>
