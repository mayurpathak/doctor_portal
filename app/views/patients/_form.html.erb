<%= form_with(model: patient) do |form| %>
  <div class="row">
    <div class="col-md-3">
      <%= form.label :firstname, style: "display: block" %>
      <%= form.text_field :firstname, class:'form-control' %>
      <p style="color: red"><%= patient.errors[:firstname]&.first if patient&.errors.any? %></p>
    </div>

    <div class="col-md-3">
      <%= form.label :lastname, style: "display: block" %>
      <%= form.text_field :lastname, class:'form-control' %>
      <p style="color: red"><%= patient.errors[:lastname]&.first if patient&.errors.any? %></p>
    </div>

    <div class="col-md-3">
      <%= form.label :mobile_no, style: "display: block" %>
      <%= form.text_field :mobile_no, class:'form-control' %>
    </div>

    <div class="col-md-3">
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, class:'form-control' %>
    </div>

    <div class="col-md-3">
      <%= form.label :diseases, style: "display: block" %>
      <%= form.text_field :diseases, class:'form-control' %>
    </div>

    <div class="col-md-3">
      <%= form.label :appointment_date, style: "display: block" %>
      <%= form.datetime_field :appointment_date, class:'form-control' %>
    </div>

    <div class="col-md-3">
      <%= form.label :reference_no, style: "display: block" %>
      <%= form.text_field :reference_no, class:'form-control' %>
    </div>

    <div class="col-md-3">
      <%= form.label :pincode, style: "display: block" %>
      <%= form.number_field :pincode, class:'form-control' %>
    </div>

    <div class="col-md-3">
      <%= form.label :address, style: "display: block" %>
      <%= form.text_area :address, class:'form-control' %>
    </div>

    <div class="col-md-3">
      <%= form.label :special_remarks, style: "display: block" %>
      <%= form.text_area :special_remarks, class:'form-control' %>
    </div>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
